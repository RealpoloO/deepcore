# Eve Online SSO Configuration (PRODUCTION)
# Créez votre application sur: https://developers.eveonline.com/applications
EVE_CLIENT_ID=your_production_client_id_here
EVE_CLIENT_SECRET=your_production_client_secret_here
EVE_CALLBACK_URL=https://votre-domaine.com/api/auth/callback

# Server Configuration
PORT=3000
NODE_ENV=production
SESSION_SECRET=CHANGEZ_CETTE_VALEUR_PAR_UNE_CHAINE_ALEATOIRE_LONGUE_ET_SECURISEE

# Frontend URL (URL publique de votre application)
CLIENT_URL=https://votre-domaine.com

# Discord Bot Configuration (PRODUCTION)
DISCORD_CLIENT_ID=your_discord_app_client_id
DISCORD_CLIENT_SECRET=your_discord_app_client_secret
DISCORD_CALLBACK_URL=https://votre-domaine.com/api/discord/callback
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_ADMIN_USER_ID=your_discord_user_id_here

# SDE (Static Data Export) Configuration
SDE_DATA_DIR=eve-online-static-data
SDE_CHECK_INTERVAL=86400000

# Database (sera stockée dans /app/data dans le container)
DATABASE_PATH=/app/data/whatdidimine.db
